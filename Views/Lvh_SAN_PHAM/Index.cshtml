@model IEnumerable<LEVINHHUY_K22CNT1_2210900106.Models.SAN_PHAM>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewBag.Title</h2>

    <p class="text-center">
        @Html.ActionLink("Tạo sản phẩm mới", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>

    <table class="table table-striped table-hover shadow-sm">
        <caption class="text-center text-muted">Danh sách sản phẩm trong kho</caption>
        <thead class="table-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th style="width: 50%;">Mô tả</th>
                <th style="width: 17%;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                    <td>@Html.DisplayFor(modelItem => item.So_luong)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mo_ta)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }, new { @class = "btn btn-sm btn-warning" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP }, new { @class = "btn btn-sm btn-info" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
